@{
    ViewBag.Title = "Pizzicato";
}

<div class="jumbotron" ng-controller="addCtrl">
    <div class="row">
        <div class="col-md-4 pizza-edit">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-4">Name:</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" ng-model="pizza.Name" />
                    </div>
                </div>
                <div class="pizza-image">
                    <img src="~/Resources/PizzaImages/Boston.png" />
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Cost:</label>
                    <div class="col-sm-8">
                        <input type="number" class="form-control" ng-model="pizza.Cost" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Weight:</label>
                    <div class="col-sm-8">
                        <input type="number" class="form-control" ng-model="pizza.Weight" />
                    </div>
                </div>
                <div class="btns">
                    <div class="save-btn">
                        <button type="button" class="btn btn-warning" ng-click="add(pizza)">&nbsp;&nbsp;&nbsp;&nbsp;Add&nbsp;&nbsp;&nbsp;&nbsp;</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="container">

</div>